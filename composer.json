{
    "name": "greeflas/ddd-hexagonal-architecture-example",
    "description": "This is example of Hexagonal Architecture in PHP using Domain Driven Design.",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vladimir Kuprienko",
            "email": "vldmr.kuprienko@gmail.com",
            "role": "Maintainer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "money/money": "^2.0",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
        "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi"
    },
    "config": {
        "sort-packages": true
    }
}
